<EditForm Model="EmailDTO" OnValidSubmit="SendRecoverPasswordEmailTokenAsync">
    <DataAnnotationsValidator />
    <MudDialog>
        <DialogContent>
            <MudGrid Class="mb-4">
                <MudItem xs="12" sm="12">
                    <MudTextField Label="Usuario" @bind-Value="@EmailDTO.Email" InputType="InputType.Email" />
                    <ValidationMessage For="@(() => EmailDTO.Email)" />
                </MudItem>
            </MudGrid>
            <MudGrid Class="mb-4">
                <MudItem xs="12" sm="6" Class="d-flex justify-content-center">
                    <MudButton Variant="Variant.Filled"
                               StartIcon="@Icons.Material.Filled.Save"
                               Color="Color.Dark"
                               ButtonType="ButtonType.Submit">
                        Enviiar
                    </MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" Class="d-flex justify-content-center">
                    <MudButton Variant="Variant.Filled"
                               StartIcon="@Icons.Material.Filled.ArrowBack"
                               Color="Color.Surface"
                               OnClick="CloseModal">
                        Cancel
                    </MudButton>
                </MudItem>
            </MudGrid>
        </DialogContent>
    </MudDialog>
</EditForm>
