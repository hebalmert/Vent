@page "/api/accounts/ResetPassword"

<EditForm Model="resetPasswordDTO" OnValidSubmit="ChangePasswordAsync">
    <DataAnnotationsValidator />
    <MudGrid>
        <MudItem xs="5" sm="5">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Cambio de Clave</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="12" sm="12" Class="mb-5">
                            <MudTextField Label="Usuario" @bind-Value="@resetPasswordDTO.Email" InputType="InputType.Email" For="@(() => resetPasswordDTO.Email)" />
                            <MudTextField Label="Nueva Clave" InputType="InputType.Password" @bind-Value="@resetPasswordDTO.NewPassword" For="@(() => resetPasswordDTO.NewPassword)" />
                            <MudTextField Label="Confirmar Clave" InputType="InputType.Password" @bind-Value="@resetPasswordDTO.ConfirmPassword" For="@(() => resetPasswordDTO.ConfirmPassword)" />
                        </MudItem>
                        <MudItem xs="12" sm="12">
                            <MudGrid Class="mb-4">
                                <MudItem xs="12" sm="6" Class="d-flex justify-content-center">
                                    <MudButton Variant="Variant.Filled"
                                               StartIcon="@Icons.Material.Filled.Save"
                                               Color="Color.Dark"
                                               ButtonType="ButtonType.Submit">
                                        Enviar
                                    </MudButton>
                                </MudItem>
                                <MudItem xs="12" sm="6" Class="d-flex justify-content-center">
                                    <MudButton Variant="Variant.Filled"
                                               StartIcon="@Icons.Material.Filled.ArrowBack"
                                               Color="Color.Surface"
                                               Href="/">
                                        Cancel
                                    </MudButton>
                                </MudItem>
                            </MudGrid>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>
