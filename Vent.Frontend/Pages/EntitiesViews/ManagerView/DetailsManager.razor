@page "/managers/details/{Id:int}"
@attribute [Authorize(Roles = "Admin")]

@if (Manager is null)
{
    <Loading />
}
else
{
    ﻿<MudDialog>
        <DialogContent>
            <MudGrid>
                <MudItem xs="6">
                    <MudTextField Label="@GetDisplayName(() => Manager.FirstName)"
                                  @bind-Value="@Manager.FirstName"
                                  For="@(() => Manager.FirstName)"
                                  Class="mb-4" ReadOnly="true" />
                    <MudTextField Label="@GetDisplayName(() => Manager.LastName)"
                                  @bind-Value="@Manager.LastName"
                                  For="@(() => Manager.LastName)"
                                  Class="mb-4" ReadOnly="true" />
                    <MudTextField Label="@GetDisplayName(() => Manager.Nro_Document)"
                                  @bind-Value="@Manager.Nro_Document"
                                  For="@(() => Manager.Nro_Document)"
                                  Class="mb-4" ReadOnly="true" />
                    <MudTextField Label="@GetDisplayName(() => Manager.PhoneNumber)"
                                  @bind-Value="@Manager.PhoneNumber"
                                  For="@(() => Manager.PhoneNumber)"
                                  Class="mb-4" ReadOnly="true" />
                    <MudTextField Label="@GetDisplayName(() => Manager.Address)"
                                  @bind-Value="@Manager.Address"
                                  For="@(() => Manager.Address)"
                                  Class="mb-4" ReadOnly="true" />
                    <MudTextField Label="@GetDisplayName(() => Manager.UserName)"
                                  @bind-Value="@Manager.UserName"
                                  For="@(() => Manager.UserName)"
                                  Class="mb-4" ReadOnly="true" />
                    <MudCheckBox Label="@GetDisplayName(() => Manager.Active)"
                                 @bind-Value="@Manager.Active"
                                 For="@(() => Manager.Active)"
                                 Class="mb-4" ReadOnly="true" />
                </MudItem>
                <MudItem xs="6">
                    <MudTextField Label="@GetDisplayName(() => Manager.Job)"
                                  @bind-Value="@Manager.Job"
                                  For="@(() => Manager.Job)"
                                  Class="mb-4" ReadOnly="true" />

                    <MudTextField Label="@GetDisplayName(() => Manager.Corporation!.Name)"
                                  @bind-Value="@Manager.Corporation!.Name"
                                  For="@(() => Manager.Corporation!.Name)"
                                  Class="mb-4" ReadOnly="true" />

                    <MudImage Src="@Manager.ImageFullPath" Width="90" Height="60" />

                </MudItem>
            </MudGrid>
        </DialogContent>
    </MudDialog>
}

