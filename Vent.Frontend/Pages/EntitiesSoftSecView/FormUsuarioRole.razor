<NavigationLock OnBeforeInternalNavigation="OnBeforeInternalNavigation" />
<EditForm EditContext="_editContext" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />
    <MudGrid>
        <MudItem xs="12">
            @if (ListUserType is null)
            {
                <Loading />
            }
            else
            {
                <MudSelect T="EnumItemModel" Class="mb-4"
                           Value="SelectedUserType"
                           ValueChanged="UsertTypeChanged"
                           ToStringFunc="@(e=> e==null?null : $"{e.Name}")"
                           Placeholder="--Seleccione Role--"
                           For="@(() => SelectedUserType)">
                    @foreach (var item in ListUserType!)
                    {
                        <MudSelectItem Value="item">@item.Name</MudSelectItem>
                    }
                </MudSelect>
            }
        </MudItem>
    </MudGrid>
    <br />
    <div class="mb-4" style="display: flex; justify-content: center; gap: 10px; margin-top: 10px;">
        <MudButton Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.ArrowBack"
                   Color="Color.Surface"
                   OnClick="ReturnAction">
            Volver
        </MudButton>
        <MudButton Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Save"
                   Color="Color.Dark"
                   ButtonType="ButtonType.Submit">
            Guardar
        </MudButton>
    </div>
</EditForm>

